<!DOCTYPE html>
<html>
<head>
  
</head>
<body>
  <h1>Edit Student</h1>
  <%= link_to 'Back', students_path %>

  <%= form_with(model: @student, url: student_path(@student), method: :patch, local: true) do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :roll_no %>
      <%= form.text_field :roll_no %>
    </div>

    <div>
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number %>
    </div>

    <div>
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label :address %>
      <%= form.text_area :address %>
    </div>

    <%= form.submit 'Update Student' %>
  <% end %>
</body>
</html>
