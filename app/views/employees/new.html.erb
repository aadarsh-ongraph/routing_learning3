<h1> New Employee </h1>

<%= form_with(model: @employee, url: employees_path, local:true) do |form| %>

 <div>
  <%= form.label :name %>
  <%= form.text_field :name %>
 </div>

 <div>
   <%= form.label :department %>
   <%= form.text_field :department %>
   </div>

<div>
  <%= form.label :salary %>
  <%= form.text_field :salary %>
  </div>

  <div>
   <%= form.label :phone_number %>
   <%= form.text_area :phone_number %>
  </div>

  <%= form.submit 'Create Employee' %>
<% end %>